generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id        BigInt      @id @default(autoincrement())
  title     String
  content   String
  summary   String?
  createdAt DateTime @default(now())
  tags      Tag[]?
}

model Tag {
  id    BigInt    @id @default(autoincrement())
  name  String @unique
  notes Note[]?
}
